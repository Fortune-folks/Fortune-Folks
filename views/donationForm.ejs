<!DOCTYPE html>
<html>
	<head>
		<link
			href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@700&display=swap"
			rel="stylesheet"
		/>
		<link href="/css/foodForms.css" rel="stylesheet" />
	</head>
	<body>
		<div class="container1">
			<center><h1 class="heading-main">Donate Food</h1></center>
			<div class="container2">
				<form id="demo" method="POST" action="/donations/add">
					<div class="row">
						<div class="col-25">
							<label for="quantity">Quantity</label>
						</div>
					</div>
					<div class="col-100">
						<input type="number" id="quantity" name="quantity" required />
					</div>
					<div class="row">
						<div class="col-25">
							<label for="description">Description</label>
						</div>
					</div>
					<div class="col-100">
						<textarea id="description" name="description" required></textarea>
					</div>
					<h3>Pick Up Address</h3>
					<div class="row">
						<div class="col-25">
							<label for="addLine1">Address Line 1</label>
						</div>
					</div>
					<div class="col-100">
						<input type="text" id="addLine1" name="addLine1" required />
					</div>
					<div class="row">
						<div class="col-25">
							<label for="addLine2">Address Line 2</label>
						</div>
					</div>
					<div class="col-100">
						<input type="text" id="addLine2" name="addLine2" required />
					</div>
					<div class="row">
						<label for="city">City</label>
					</div>
					<div class="col-100">
						<input type="text" id="city" name="city" required />
						<input type="hidden" id="latitude" name="latitude" value="" required />
						<input type="hidden" id="longitude" name="longitude" value="" required />
					</div>
					<div class="row">
						<input type="submit" />
					</div>
				</form>
			</div>
		</div>
	</body>
	<script src="/getLocation.js"></script>
</html>
