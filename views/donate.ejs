<h1>Donate Food</h1>
<p id="error"></p>
<form name="donationForm" method="POST" action="/donate">
	<label for="quantity">Quantity</label>
	<input type="number" id="quantity" name="quantity" />

	<label for="description">Description</label>
	<textarea id="description" name="description"></textarea>

	<h3>Pick Up Address</h3>
	<label for="addLine1">Address Line 1</label>
	<input type="text" id="addLine1" name="addLine1" />

	<label for="addLine2">Address Line 2</label>
	<input type="text" id="addLine2" name="addLine2" />

	<label for="city">City</label>
	<input type="text" id="city" name="city" />

	<input type="hidden" id="latitute" name="latitute" value="" />
	<input type="hidden" id="longitute" name="longitute" value="" />

	<input type="submit" onclick="getLocation()" />
</form>

<script src="getLocation.js"></script>
